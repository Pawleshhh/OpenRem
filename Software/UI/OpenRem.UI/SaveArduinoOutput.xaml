<UserControl x:Class="OpenRem.UI.SaveArduinoOutput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:OpenRem.UI"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             >
    <StackPanel>
        <TextBlock x:Name="status" Text="Status" />
        <Button x:Name="btnStartRecording" Click="BtnStartRecording_Click">Start recording</Button>
        <Button x:Name="btnStopRecording" Click="BtnStopRecording_Click">Stop recording</Button>
    </StackPanel>
</UserControl>
